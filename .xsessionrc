export IDEA_JDK="/usr/lib/jvm/java-7-sun"
export JAVA_HOME="/usr/lib/jvm/java-7-sun"
export M2_HOME="/usr/share/maven"
export M2="/usr/share/maven/bin"
export M2_REPO="$HOME/.m2"
export MAVEN_OPTS="-Xmx512M -XX:MaxPermSize=512m -XX:PermSize=128m -XX:+UseParallelOldGC -Dfile.encoding=UTF8"
export JAVA_OPTIONS="-Dawt.useSystemAAFontSettings=on -Dswing.aatext=true"
export SCALA_HOME="/opt/scala-2.10.3"
export PATH=$PATH:$SCALA_HOME/bin

export TERM="xterm-256color"
if [ -f $HOME/.Xdefaults ]; then
  xrdb -merge $HOME/.Xdefaults
fi
